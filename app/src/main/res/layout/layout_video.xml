<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/bid_grey"
        tools:orientation="vertical"
        tools:parentTag="LinearLayout">

    <LinearLayout
            android:id="@+id/top_control_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_48"
            android:layout_marginEnd="@dimen/dp_48"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/top_left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/top_left_img"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/btn_switch2phone" />

            <TextView
                    android:id="@+id/top_left_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="切换到语音"
                    android:textColor="@color/color_ct2"
                    android:textSize="@dimen/font_6" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/top_middle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/top_middle_img"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/voice_hunt_up_selector" />

            <TextView
                    android:id="@+id/top_middle_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="挂断"
                    android:textColor="@color/color_ct2"
                    android:textSize="@dimen/font_6" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/top_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/top_right_img"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/btn_switcher" />

            <TextView
                    android:id="@+id/top_right_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="转换摄像头"
                    android:textColor="@color/color_ct2"
                    android:textSize="@dimen/font_6" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/bottom_control_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_60"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/bottom_left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/bottom_left_img"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:background="@drawable/btn_switch2phone" />

            <TextView
                    android:id="@+id/bottom_left_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="切换到语音"
                    android:textColor="@color/color_ct2"
                    android:textSize="@dimen/font_6" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/bottom_middle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/bottom_middle_img"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:background="@drawable/voice_hunt_up_selector" />

            <TextView
                    android:id="@+id/bottom_middle_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="挂断"
                    android:textColor="@color/color_ct2"
                    android:textSize="@dimen/font_6" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/bottom_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/bottom_right_img"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:background="@drawable/btn_switcher" />

            <TextView
                    android:id="@+id/bottom_right_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="转换摄像头"
                    android:textColor="@color/color_ct2"
                    android:textSize="@dimen/font_6" />
        </LinearLayout>
    </LinearLayout>

</merge>
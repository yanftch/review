<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".android.pages.SvgaActivity">


    <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/sv_live"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/color_ct1_85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.legacy.widget.Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/sv_live" />


    <TextView
            android:id="@+id/tv_tab_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ct1_85"
            android:gravity="center"
            android:text="TAB A"
            android:textColor="@color/white"
            android:textSize="@dimen/font_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space" />

    <TextView
            android:id="@+id/tv_tab_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ct1_85"
            android:gravity="center"
            android:text="TAB B"
            android:textColor="@color/white"
            android:textSize="@dimen/font_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tab_a" />

    <TextView
            android:id="@+id/tv_tab_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ct1_85"
            android:gravity="center"
            android:text="TAB C"
            android:textColor="@color/white"
            android:textSize="@dimen/font_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tab_b" />

    <TextView
            android:id="@+id/tv_tab_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ct1_85"
            android:gravity="center"
            android:text="TAB D"
            android:textColor="@color/white"
            android:textSize="@dimen/font_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tab_c" />

</androidx.constraintlayout.widget.ConstraintLayout>